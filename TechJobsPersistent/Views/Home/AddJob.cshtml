<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" />
        <span></span>
    </div>

    <div class="form-group">
        <label>Employer</label>
        <span></span>
        <select asp-items="@Model.Employers"></select>
    </div>

    <div class="form-group">
        <label>Selected Skills</label>
        <span></span>
        <select asp-items="@Model.Skills"></select>
        <input type="checkbox" name="selectedSkills" />
    </div>

    <input type="submit" value="Add Job" />
</form>

<div>
    <a asp-controller="Employer" asp-action="Add">Add New Employer</a>
</div>

